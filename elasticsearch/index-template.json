# Elasticsearch Index Template for agentic-sales-copilot
{
  "index_patterns": ["agentic-sales-copilot*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.codec": "best_compression",
      "index.refresh_interval": "5s",
      "index.mapping.total_fields.limit": 2000,
      "index.lifecycle.name": "agentic-sales-copilot-policy",
      "index.lifecycle.rollover_alias": "agentic-sales-copilot"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "message": {
          "type": "text",
          "analyzer": "standard"
        },
        "log": {
          "properties": {
            "level": {
              "type": "keyword"
            }
          }
        },
        "service": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "version": {
              "type": "keyword"
            }
          }
        },
        "correlation": {
          "properties": {
            "id": {
              "type": "keyword"
            }
          }
        },
        "prospect": {
          "properties": {
            "email": {
              "type": "keyword"
            },
            "subject": {
              "type": "text"
            }
          }
        },
        "email": {
          "properties": {
            "classification": {
              "type": "keyword"
            },
            "research_performed": {
              "type": "boolean"
            }
          }
        },
        "slack": {
          "properties": {
            "action_id": {
              "type": "keyword"
            },
            "user": {
              "type": "keyword"
            },
            "channel_id": {
              "type": "keyword"
            }
          }
        },
        "http": {
          "properties": {
            "response": {
              "properties": {
                "status_code": {
                  "type": "integer"
                }
              }
            }
          }
        },
        "conversation": {
          "properties": {
            "thread_id": {
              "type": "keyword"
            }
          }
        },
        "content": {
          "type": "object",
          "enabled": false
        },
        "is_error": {
          "type": "boolean"
        },
        "env": {
          "type": "keyword"
        }
      }
    }
  }
}